@model Photolife.Models.Message

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Message</legend>

    <div class="display-label">From</div>
    <div class="display-field">
        @Membership.GetUser(Model.Nadawca).UserName
    </div>

    <div class="display-label">To</div>
    <div class="display-field">
        @Membership.GetUser(Model.Odbiorca).UserName
    </div>

    <div class="display-label">Title</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Tytuł)
    </div>

    <div class="display-label">Content</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Treść)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MessageId }) |
    @Html.ActionLink("Powrót", "Index")
</p>
